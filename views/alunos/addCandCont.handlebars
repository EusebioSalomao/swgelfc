    <div class="mybox p-3 mt-3">
       
        <div class="">
            <form action="/candidatos/save" method="post">
                <div class="form-headear2">
                    <div class="title">
                        <h1>Verifique seus Dados</h1>
                    </div>
                    {{#each erro}}
                    <div class="alert alert-danger text-center">{{texto}}</div>
                    {{else}}
                    {{/each}}
                </div>
                <div class="input-group">
                    <div class="input-box">
                        <label for="nome">Nome:</label>
                        <input type="text" name="nome" value="{{candidato.nome}}">
                    </div>
                    <div class="input-box">
                        <label for="numBI">NÂº BI:</label>
                        <input type="text" name="numBI" value="{{candidato.numBI}}">
                    </div>

                    <div class="input-box">
                        <label for="dataNascimento">Data de nascimento:</label>
                        <input type="date" name="dataNascimento" value="{{candidato.dataNascimento}}">
                    </div>

                    <div class="input-box">
                        <label for="genero">Genero</label>

                        <select name="genero">
                            <option value="{{candidato.genero}}">{{candidato.genero}}</option>
                            <option value="feminino">Feminino</option>
                            <option value="masculino">Masculino</option>
                        </select>
                    </div>
                    <div class="input-box">
                        <label for="contacto">Contacto:</label>
                        <input type="text" name="contacto" value="{{candidato.contacto}}">
                    </div>
                    <div class="input-box">
                        <label for="curso">curso</label>
                        <select name="curso" id="">
                            <option value="{{candidato.curso}}">{{candidato.curso}} </option>
                            {{#each cursos}}
                            <option value="{{descricao}}">{{descricao}}</option>
                            {{else}}
                            <option value="">Nenhum curso</option>
                            {{/each}}
                        </select>

                    </div>

