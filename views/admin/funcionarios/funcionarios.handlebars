<h2>Lista de todos funcionarios</h2>
<hr>
<a href="/funcionarios/add"><button class="btn btn-primary" >Cadastrar novo funcionario</button></a>
<div class="continer">
    {{#each funcionarios}}
    <div class="card mt-2">
        <div class="card-body">
            <div class="row">
                <div class="col-2 ms-2 me-0 p-0 text-end">
                   <img src="/img/BG.jpg" class="fotoF mx-0 p-0" alt="foto">
                </div>
                <div class="col-7 ps-0 ms-0">
                    <h3 class="mx-0" >{{nome}}</h3>
                    <div class="lead"> {{funcao}} </div>
                </div>
                <div class="col-3"></div>
            </div>
        </div>
    </div>
    {{else}}
    <div class="h4 text-center">Não ha funcionário cadastrado</div>
    {{/each}}
</div>