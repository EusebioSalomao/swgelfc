<div class="conteiner mt-5">
    <div class="row">
        <div class="col-5 offset-4">
            <h2>Edidar ano Lectivo: {{anoLectivo.codigo}}</h2>
            <hr>
            <div class="card mybox input-box bg-light">
                <div class="card-body p-4">
                    <form action="/anosLectivo/editSave" method="post">
                        <label for="codigo">Código:</label>
                        <input type="text" name="codigo" value="{{anoLectivo.codigo}}" class="form-control" required>
                        <div class="row">
                            <div class="col-6">
                                <label for="dataInicio">Data de início</label>
                                <input type="date" name="dataInicio" value="{{anoLectivo.dataInicio}}" class="form-control" required>

                            </div>
                            <div class="col-6">
                                <label for="dataFim">Data final</label>
                                <input type="date" name="dataFim" value="{{anoLectivo.dataFim}}" class="form-control" required>

                            </div>
                        </div>

                        <input type="hidden" name="id" value="{{anoLectivo._id}}">
                        <div class="text-center">
                            <a href="/anosLectivo/config/{{anoLectivo._id}}" class="btn btn-danger mt-3 btn-sm">Cancelar</a>
                            <button type="submit" class="btn btn-success mt-3 btn-sm">Salvar alterações</button>

                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>